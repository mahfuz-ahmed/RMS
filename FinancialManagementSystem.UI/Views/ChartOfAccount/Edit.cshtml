@using FinancialManagementSystem.Core
@model ChartOfAccountUpdateDto

@{
    ViewData["Title"] = "Edit Chart of Account";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Chart of Account</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <!-- Visible, disabled input for UI -->
                            <input type="text" class="form-control" value="@Model.AccountCode" disabled />
                            <label>Account Code <span class="text-danger">*</span></label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="AccountCode" />

                    <!-- Account Name -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="AccountName" class="form-control" placeholder="Account Name" />
                            <label asp-for="AccountName">Account Name <span class="text-danger">*</span></label>
                            <span asp-validation-for="AccountName" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Account Type -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="AccountType" class="form-select" asp-items="ViewBag.AccountTypes">
                                <option value="">-- Select Account Type --</option>
                            </select>
                            <label asp-for="AccountType">Account Type <span class="text-danger">*</span></label>
                            <span asp-validation-for="AccountType" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Parent Account -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentAccounts">
                                <option value="">-- Select Parent Account (optional) --</option>
                            </select>
                            <label asp-for="ParentId">Parent Account</label>
                            <span asp-validation-for="ParentId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Is Active -->
                    <div class="col-12">
                        <div class="form-check form-switch mt-2">
                            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="IsActive" />
                            <label class="form-check-label" for="IsActive">Active</label>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
