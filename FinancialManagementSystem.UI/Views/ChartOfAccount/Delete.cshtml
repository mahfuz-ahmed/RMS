@using FinancialManagementSystem.Core
@model ChartOfAccountReadDto

@{
    ViewData["Title"] = "Delete Chart of Account";
}

<h2>Delete Chart of Account</h2>

<div>
    <h4>Are you sure you want to delete this account?</h4>
    <dl class="row">
        <dt class="col-sm-2">Account Code</dt>
        <dd class="col-sm-10">@Model.AccountCode</dd>
        <dt class="col-sm-2">Account Name</dt>
        <dd class="col-sm-10">@Model.AccountName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
